<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>DemoServlet01</servlet-name>
        <servlet-class>eu.chessout.backend.api.DemoServlet01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServlet01</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DemoServlet02</servlet-name>
        <servlet-class>eu.chessout.backend.api.DemoServlet02</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DemoServlet02</servlet-name>
        <url-pattern>/api/DemoServlet02</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BasicApi</servlet-name>
        <servlet-class>eu.chessout.backend.api.BasicApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BasicApi</servlet-name>
        <url-pattern>/api/BasicApi</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Worker</servlet-name>
        <servlet-class>eu.chessout.backend.taskqueue.push.Worker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Worker</servlet-name>
        <url-pattern>/worker</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>